@model ProfilePost
@{
  int? uid = Context.Session.GetInt32("UserId");
}


<form asp-controller="ProfilePosts" asp-action="Create"  
asp-route-userProfileId="@ViewBag.UsersProfileId"
asp-route-profilePostAuthor = "@uid"
 method="POST">

<div class="col-md-8">
      <div class="form-group">
        <label>Post A Message:</label>
        <span
          class="text-danger font-weight-bold"
          asp-validation-for="ForumMsg"
        >
        </span>
        <textarea class="form-control" asp-for="ForumMsg" >
        </textarea>
      </div>
</div>


    <div class="mt-3">
        <a asp-controller="ProfilePosts" asp-action="Profile" class="btn btn-primary">Cancel</a>
        <button class="btn btn-success">Submit</button>
    </div>
</form>
